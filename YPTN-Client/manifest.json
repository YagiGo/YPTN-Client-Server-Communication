{
  "manifest_version":2,
  "name":"YPTN-Client",
  "version":"1.0",
  "description":"This is the client part of the YPTN, the edge-computing assisted web browsing system",

  "background": {
    "scripts":[
      "socket.io.js",
      "fetchInfo.js",
      "trace.js",
      "UIJS/jquery.min.js",
      "UIJS/bootstrap.min.js",
      "UIJS/popup.js"
    ],
    "persistent": true
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "ESIM Page Loading Accelerating"
  },


  "permissions":[
    "*://*/*",
    "webRequest",
    "declarativeWebRequest",
    "webRequestBlocking",
    "pageCapture",
    "tabs",
    "contentSettings",
    "cookies"
  ]
}